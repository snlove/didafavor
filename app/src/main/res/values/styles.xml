<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/movie_colorPrimary</item>
        <item name="colorPrimaryDark">@color/movie_colorPrimaryDark</item>
        <item name="colorAccent">@color/movie_colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Movie_Theme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/movie_colorPrimary</item>
        <item name="colorPrimaryDark">@color/movie_colorPrimaryDark</item>
        <item name="colorAccent">@color/movie_colorAccent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:dialogTheme">@style/TitledDialog</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>//设置全屏
        <item name="android:windowBackground">@drawable/app_logo</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/movie_colorPrimary</item>
        <item name="colorPrimaryDark">@color/movie_colorPrimaryDark</item>
        <item name="colorAccent">@color/movie_colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CollapsedToolbar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedToolbar">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TitledDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>


</resources>
